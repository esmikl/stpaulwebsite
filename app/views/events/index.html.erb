<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
		  <td><%= event.date.strftime('%m/%d/%Y') %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
		  <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
	  <% if (@events.empty?) %>
	  <tr>
	  	<td>There are no upcoming events.</td>
	  </tr>
	  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, {:class=>"btn btn-default"} %>
